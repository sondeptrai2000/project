<!DOCTYPE html>
<html lang="en">

<head>
    <script src="/jquery/jquery.js"></script>
    <link rel="stylesheet" href="/css/teacher/allClass.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
</head>

<body>
    <div class="attendedListOut" style="display: none;">
        <table border="solid" id="attendedList">
            <tr>
                <th>Date</th>
                <th>Day of week</th>
                <th>Action</th>
                <th><button onclick='$(".attendedListOut").fadeOut(500);'>close</button></th>

            </tr>
        </table>
    </div>

    <div class="attendedOutDoorOut" style="display:none">
        <table class='attendedOutDoor' border='solid'>
            <thead>
                <tr>
                    <th>username</th>
                    <th>note</th>
                    <th>atended</th>
                    <th><button onclick='$(".attendedOutDoorOut").fadeOut(500);'>Close</button>
                    </th>
                </tr>
            </thead>
            <tbody class='attendedOutDoorBody'></tbody>
        </table>
    </div>


    <div class="innerOut" style="display:none">
        <div class="inner">
            <div class="option"></div>
            <table border='solid'>
                <th>avatar</th>
                <th>username</th>
                <th>Aim</th>
                <th>email</th>
                <th>grade</th>
                <th>feedBackContent</th>
                <th>Select</th>
                <th>Chat</th>
                <th>đánh giá</th>
                <th onclick='$(".innerOut").hide();'>X</th>
                <tbody class='taskrow'></tbody>
            </table>
        </div>
    </div>
    <div class="studentTableOut" style="display: none;">
        <div id="studentTable">
            <table border='solid'>
                <thead>
                    <tr>
                        <th><input id="myInputxxxx" type="text" placeholder="Search.."></th>
                        <th><button onclick='$(".studentTableOut").hide();'>&times;</button></th>
                    </tr>
                    <tr>
                        <th>avatar</th>
                        <th>username</th>
                        <th>email</th>
                        <th>routeName</th>
                        <th>stage</th>
                        <th>Chose</th>
                        <th>More information</th>
                    </tr>
                </thead>
                <tbody class='taskrow111'></tbody>
            </table>
        </div>
    </div>
    <div class="studentAssessmentOut" style="display:none">
        <div class="studentAssessment">
            <table class='' border='solid'>
                <h2>studentAssessment form</h2>
                <span>ClassID: <label id='classID'></label> </span><br>
                <span>StudentID: <label id='studentID'></label> </span><br>
                <span>Name: <label id='name'></label> </span><br>
                <span>Email: <label id='email'></label> </span><br>
                <span for="topic">Grade</span><br>
                <select class="level" id="grade">
                    <option value="Greate">Greate </option>
                    <option value="Good">Good</option>
                    <option value="Soso">Soso</option>
                    <option value="Restudy">Restudy</option>
                </select>
                <br>
                <label>Comment</label>
                <input type="text" id="comment">
                <br>
                <button onclick="takeFeedBack()"> Tiến hành đánh giá</button>
                <p onclick='$(".studentAssessmentOut").hide()'>cancle</p>
            </table>
        </div>
    </div>
    <div class="studentAssessmentUpdateOut" style="display:none">
        <div class="studentAssessmentUpdate">
            <table border='solid'>
                <h2>Update studentAssessment form</h2>
                <span>ClassID: <label id='updateclassID'></label> </span><br>
                <span>StudentID: <label id='updatestudentID'></label> </span><br>
                <span>Updatename: <label id='updatename'></label> </span><br>
                <span for="topic">Grade</span>
                <select class="level" id="updategrade">
                    <option value="Greate">Greate </option>
                    <option value="Good">Good</option>
                    <option value="Soso">Soso</option>
                    <option value="Restudy">Restudy</option>
                </select>
                <br>
                <label>Comment</label>
                <input type="text" id="updatecomment">
                <br>
                <button onclick="updateFeekBack()">cập nhật Tiến hành đánh giá</button>
                <p onclick='$(".studentAssessmentUpdateOut").hide();'>cancle</p>
            </table>
        </div>
    </div>
    <div class='lolaOut' style="display: none;">
        <table border="solid" id='lola'>
            <tr>
                <th>ID</th>
                <th>Status</th>
                <input type="hidden" id="loladate">
                <input type="hidden" id="loladate1">
                <input type="hidden" id="loladate3">
                <input type="hidden" id="loladate4">
                <input type="text" id="scheduleStatus">
                <input type="text" id="scheduleTime">
                <input type="text" id="scheduleRoom">
                <input type="text" id="scheduleDay">
                <th><button onclick="submitTakeAttend()">submit</button></th>
                <th><button onclick='$(".lolaOut").fadeOut(500);'>close</button></th>
            </tr>
        </table>
    </div>

    <header>
        <ul style="float:left;font-family:cursive;">
            <li style="width:200px"><i class="fas fa-graduation-cap" style="font-size:60px"></i>Sown English</li>
        </ul>
        <ul>
            <li><a href="#">Home page</a></li>
            <li><a onclick="$('html, body').animate({scrollTop: ($('#aboutCourse').offset().top-100)},1000)">About
                    Course</a></li>
            <li><a onclick="$('html, body').animate({scrollTop: ($('#aboutUs').offset().top-100)},1000)">About Us</a>
            </li>
            <li><a onclick="$('#loginForm').fadeIn(1000);">Log In</a></li>
        </ul>
    </header>

    <input type="hidden" id="getClassID" value="{{params}}">
    <div class="body">
        <h2>All class level</h2>
        <table border="solid">
            <th>Class name</th>
            <th>routeName</th>
            <th>stage</th>
            <th>subject</th>
            <th>Description</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Student List</th>
            <th>Take attended</th>
            {{#each classInfor}}
            <tr id="{{_id}}">
                <td>{{className}}</td>
                <td>{{routeName}}</td>
                <td>{{stage}}</td>
                <td>{{subject}}</td>
                <td>{{description}}</td>
                <td>{{startDate}}</td>
                <td>{{endDate}}</td>
                <td><button id="btn1" onclick="sendData('{{_id}}','{{subject}}')">List of student</button></td>
                <td>
                    <button onclick="attendedList('{{_id}}')">attended </button>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>



</body>
<script src=" /allClassTeacher.js"></script>
<script>
    $(document).ready(function () {
        var getClassID = $("#getClassID").val()
        console.log(getClassID)
        $("#"+getClassID).css("background-color",'red')
    });
</script>

</html>