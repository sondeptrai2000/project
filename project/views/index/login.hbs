      display: block;
      text-decoration: none;
      color: black;
      width: 100%;
      height: 100%;
      line-height: 100%;
      padding-top: 15px;
      border: 1px solid white;

    }

    #menu a:hover {
      background: #F1F1F1;
      color: #333;
    }

    article {
      margin-left: 170px;
      border-left: 1px solid gray;
      padding: 1em;
      overflow: hidden;
    }

    nav {
      float: right;
      max-width: 160px;
      margin: 0;
      padding: 1em;
    }

    nav ul {
      list-style-type: none;
      padding: 0;
    }

    nav ul a {
      text-decoration: none;
    }
  </style>
</head>

