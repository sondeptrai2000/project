<!DOCTYPE html>
<html lang="en">

<head>
      <script src="/jquery/jquery.js"></script>
</head>

<body>
      <div id="createAccount" >
            <h2>ACCOUNT INFORMATION</h2>
            <label for="facultyname">Avatar</label>
            Select images: <input type="file" name="myFile" id="myFile">
            <div class="gallery"></div>
            <br>
            <label for="facultyname">Name</label>
            <input type="text" id="username">
            <br>
            <label for="topic">Email</label>
            <input type="email" id="email" class="emailinput">
            <br>
            <label for="topic">Password</label>
            <input type="password" id="password">
            <br>
            <label for="topic">Role</label>
            <select class="Role" id="role">
                  <option value="student">Student</option>
                  <option value="guardian">Guardian</option>
                  <option value="teacher">Teacher</option>
            </select>
            <br>
            <label for="level">Level</label>
            <select class="level" id="level">
                  <option value="beginner">Beginner </option>
                  <option value="highBeginner">High Beginner</option>
                  <option value="lowIntermediate">Low Intermediate</option>
                  <option value="intermediate">Intermediate</option>
                  <option value="highAdvanced">High Advanced </option>
                  <option value="advanced">Advanced</option>
            </select>

            <label for="topic">Class ID</label>
            <select id="classID">
                  {{#each classInfor}}
                  <option value="{{_id}}" id="classID">{{className}}</option>
                  {{/each}}
                  <option value="None" id="classID">None</option>
            </select>
            <br>
            <label for="topic">Birthday</label>
            <input type="date" id="birthday">
            <br>
            <label for="topic">Phone</label>
            <input type="text" id="phone">
            <br>
            <label for="topic">Address</label>
            <input type="text" id="address">
            <br>
            <button id="btn1" onclick="signUp()">tiến hành tạo tài khoản</button>
      </div>
      <button id="btnxx">Create new account</button>
      <button id="reset">Reset</button>
      <button id="btn2" onclick="getTeacher()">getTeacher </button>
      <button id="btn3" onclick="getStudent()">getStudent </button>
      <button id="btn3" onclick="getGuardian()">getGuardian </button>
      <table border='solid'>
            <thead>
                  <tr>
                        <th>avatar</th>
                        <th>username</th>
                        <th>level</th>
                        <th>email</th>
                        <th><input id="myInput" type="text" placeholder="Search.."></th>
                  </tr>
            </thead>
            <tbody class='taskrow'></tbody>
      </table>


      <div id="updateForm" >

      </div>

</body>
